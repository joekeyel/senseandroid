            android:layout_height="300dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.2"

            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.1"

                android:text="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.1"

                android:text="2" />

            <TextView
