<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".saveactitivty">


    <ImageView
        android:id="@+id/smileyimage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:src="@mipmap/eight_smiley" />

    <EditText
        android:id="@+id/reasoncode"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="top|left"
        android:layout_margin="10dp"
        android:layout_weight="0.4"
        android:background="@drawable/strokeshape"
        android:hint="Enter your remark here"
        android:minLines="5"
        android:padding="15dp" />


    <Button
        android:id="@+id/savebutton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="0.1"
        android:background="@drawable/strokeshape2"
        android:text="SAVE" />

</LinearLayout>